<h2><%= @task.title %></h2>
<div>
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>
  <p><%= link_to "Back to list", tasks_path %></p>
</div>

<div>
  <p><%= link_to "Delete task", task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are your sure?"} %></p>
</div>


<div>
  <p><%= link_to "Edit this task", edit_task_path(@task) %></p>
</div>
